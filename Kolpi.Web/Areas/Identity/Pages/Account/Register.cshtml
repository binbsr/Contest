@page
@model RegisterModel
@{
  ViewData["Title"] = "Register";
}

<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <form class="col-6" asp-route-returnUrl="@Model.ReturnUrl" method="post">
      <h5 class="text-center">Create a new account.</h5>
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
      <p class="text-info"> Passwords can be as simple as <code>123456</code> or <code>abcdef</code> but must be <b>6</b> chars long.</p>
      <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-outline-success btn-block">Register</button>
    </form>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
