@model Kolpi.Models.Survey.SurveyThreadViewModel

@{
    ViewData["Title"] = "Create Survey Thread";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateSurveyThread">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Survey" class="btn btn-success" /> <a asp-action="AdminIndex">Back to All Surveys</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
