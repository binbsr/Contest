@model Kolpi.Models.ScoreCard.TeamViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>TeamViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />            
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theme" class="control-label"></label>
                <select asp-for="Theme" class="form-control"></select>
                <span asp-validation-for="Theme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProblemStatement" class="control-label"></label>
                <textarea asp-for="ProblemStatement" class="form-control"></textarea>
                <span asp-validation-for="ProblemStatement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ITRequirements" class="control-label"></label>
                <input asp-for="ITRequirements" class="form-control" />
                <span asp-validation-for="ITRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherRequirements" class="control-label"></label>
                <input asp-for="OtherRequirements" class="form-control" />
                <span asp-validation-for="OtherRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participants" class="control-label"></label>
                <textarea asp-for="Participants" class="form-control"></textarea>
                <span asp-validation-for="Participants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
