@model Kolpi.Models.ScoreCard.TeamViewModel

@{
  ViewData["Title"] = "Edit Team";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center mt-3 text-warning">Edit Your Team Detail</h4>
<div class="container h-100">
  <div class="row h-100 justify-content-center">
    <div class="col-md-8 text-warning">
      <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TeamCode" />
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
          <label asp-for="TeamName" class="font-weight-bold"></label>
          <input asp-for="TeamName" class="form-control" required />
          <span asp-validation-for="TeamName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Theme" class="font-weight-bold"></label>
          <select asp-for="Theme" asp-items="Html.GetEnumSelectList<Kolpi.Enums.Theme>()" class="form-control"></select>
          <span asp-validation-for="Theme" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="ProblemStatement" class="font-weight-bold"></label>
          <textarea asp-for="ProblemStatement" class="form-control" rows="3" required></textarea>
          <span asp-validation-for="ProblemStatement" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Location" class="font-weight-bold"></label>
          <select asp-for="Location" asp-items="@ViewData["locations"] as List<SelectListItem>" class="form-control"></select>
          <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Participants" class="font-weight-bold"></label>
          <textarea asp-for="Participants" class="form-control" rows="5" placeholder="Name, INumber, Phone, Email, Department" required></textarea>
          <span asp-validation-for="Participants" class="text-danger"></span>
          <div class="alert alert-info" role="alert">
            <strong>Participants input Format:</strong><i>Each participant must be in new line</i><br />
            Bishnu Rawal, i82287, 9849182885, bishnu.rawal@verscend.com, R&D1 <br />
            Niraj Shah (Team Lead), i65001, 1111111112, niraj.shah@verscend.com, R&D1 <br />
            Sanjeev Shrestha, i81111, 7777777770, sanjeev.shrestha@verscend.com, GA
          </div>
        </div>
        <div class="form-group">
          <label asp-for="ITRequirements" class="font-weight-bold"></label>
          <textarea asp-for="ITRequirements" class="form-control" rows="3"></textarea>
          <span asp-validation-for="ITRequirements" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="OtherRequirements" class="font-weight-bold"></label>
          <textarea asp-for="OtherRequirements" class="form-control" rows="3"></textarea>
          <span asp-validation-for="OtherRequirements" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="RepoUrl" class="font-weight-bold"></label>
          <input asp-for="RepoUrl" class="form-control" required />
          <span asp-validation-for="RepoUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Avatar" class="font-weight-bold"></label>
          <input asp-for="Avatar" class="form-control" />
          <div class="text-center">
            <span class="mr-5">Current Avatar</span>
            <img src="@(Model.AvatarDataUrl ?? "/images/team_avatar.png")" />
          </div>
        </div>
        <div class="form-group">
          <input type="submit" value="Save Team Changes" class="btn btn-outline-success btn-block" />
        </div>
      </form>
    </div>
  </div>
</div>


@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
