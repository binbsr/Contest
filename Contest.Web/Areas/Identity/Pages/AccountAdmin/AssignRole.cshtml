@page
@model Contest.Web.Areas.Identity.Pages.AccountAdmin.AssignRoleModel
@{
    ViewData["Title"] = "Assign Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assign Role</h2>

<form method="post">
    <hr />
    <div class="form-group">
        <input asp-for="@Model.UserId" type="hidden" value="@Model.UserId"/>
        <label>Roles For @Model.UserName</label>
        <input asp-for="@Model.UserRolesFlat" class="form-control" required value="@string.Join(',', Model.UserRoles)" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-success btn-block">Add Roles</button>
    </div>
</form>
