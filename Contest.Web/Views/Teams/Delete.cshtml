@model Contest.Models.Score.TeamViewModel

@{
  ViewData["Title"] = "Delete";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container h-100">
  <div class="row h-100 justify-content-center">
    <div class="col-md-8 text-warning">
      <h4 class="text-danger">Are you sure you want to delete this team?</h4>
      <hr />
      <dl>
        <dt>
          @Html.DisplayNameFor(model => model.TeamCode)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.TeamCode)
        </dd>
        <dt>
          @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt>
          @Html.DisplayNameFor(model => model.Themes)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.Themes)
        </dd>
        <dt>
          @Html.DisplayNameFor(model => model.ProblemStatement)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.ProblemStatement)
        </dd>
        <dt>
          @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.Location)
        </dd>
        <dt>
          @Html.DisplayNameFor(model => model.ITRequirements)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.ITRequirements)
        </dd>
        <dt>
          @Html.DisplayNameFor(model => model.OtherRequirements)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.OtherRequirements)
        </dd>
        <dt>
          @Html.DisplayNameFor(model => model.Participants)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.Participants)
        </dd>
        <dt>
          @Html.DisplayNameFor(model => model.RepoUrl)
        </dt>
        <dd>
          @Html.DisplayFor(model => model.RepoUrl)
        </dd>
      </dl>

      <form asp-action="Delete">
          <input type="hidden" asp-for="TeamCode" />
          <input type="submit" value="Delete" class="btn btn-outline-danger" />
          <a asp-action="Index" class="btn btn-outline-success">Back to All Teams</a>
          <a asp-action="Edit" asp-route-identifier="@Model.TeamCode" class="btn btn-outline-success">Edit @Model.TeamName</a>
      </form>
    </div>
  </div>
</div>