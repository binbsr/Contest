@{
    ViewData["Title"] = "Home";
    var greeting = "Welcome";
    var name = User.Identity.IsAuthenticated ? User.Identity.Name : "";
}

<div class="display-2 text-center text-uppercase">@greeting</div>
<div class="display-5 text-center text-uppercase">@name</div>

<div class="pl-5 pr-5">
    <div class="jumbotron jumbotron-fluid m-4">
        <div class="text-center">
            <img class="img-fluid" src="~/images/banners/banner.jpg" alt="Banner">
        </div>
    </div>
</div>
